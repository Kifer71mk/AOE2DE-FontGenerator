<Window xmlns:controls="clr-namespace:Sakura.Tools.Aoe2FontGenerator.Controls"  x:Class="Sakura.Tools.Aoe2FontGenerator.CharSetMappingWindow"
        x:Name="Me"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sakura.Tools.Aoe2FontGenerator"
        mc:Ignorable="d"
        Title="Char Set and Typeface Setting" Height="600" Width="800" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" UseLayoutRounding="True">
	<Grid Margin="10" DataContext="{Binding ElementName=Me, Path=Data}">
		<TabControl>
			<TabItem>
				<TabItem.Header>
					<controls:ImageItem Image="/Images/Font_16x.png" Text="Font Source" />
				</TabItem.Header>
				<controls:FontSourceSelector ActiveFontSource="{Binding Path=Font, Mode=TwoWay}" />
			</TabItem>
			<TabItem>
				<TabItem.Header>
					<controls:ImageItem Image="/Images/String_16x.png" Text="Char Set Source" />
				</TabItem.Header>
				<controls:CharSetSourceSelector ActiveCharSetSource="{Binding Path=CharSet, Mode=TwoWay}" />
			</TabItem>
			<TabItem>
				<TabItem.Header>
					<controls:ImageItem Image="/Images/AutosizeOptimize_16x.png" Text="Glyph Adjustment" />
				</TabItem.Header>
				<controls:MappingSettingPanel Data="{Binding Path=Setting}" />
			</TabItem>
		</TabControl>
	</Grid>
</Window>
