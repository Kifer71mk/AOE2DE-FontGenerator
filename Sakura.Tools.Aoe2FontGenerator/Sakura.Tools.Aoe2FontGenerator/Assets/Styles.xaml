<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Sakura.Tools.Aoe2FontGenerator">

	<Style x:Key="DefaultButtonStyle" TargetType="Button">
		<Setter Property="Padding" Value="3" />
		<Setter Property="MinWidth" Value="75" />
		<Setter Property="MinHeight" Value="24" />
	</Style>

	<Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}"></Style>

	<Style x:Key="DefaultSingleLineTextBoxStyle" TargetType="TextBox">
		<Setter Property="Padding" Value="3" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
	</Style>

	<Style TargetType="TextBox" BasedOn="{StaticResource DefaultSingleLineTextBoxStyle}"></Style>

	<DataTemplate DataType="local:FullCharSetSource">
		<TextBlock Text="Charset source - All valid chars" />
	</DataTemplate>

	<DataTemplate DataType="local:RangeCharSetSource">
		<TextBlock Text="Charset source - Ranged chars" />
	</DataTemplate>

	<DataTemplate DataType="local:SystemFontSource">
		<TextBlock Text="{Binding Path=FontInfo, Converter={StaticResource FontInfoConverter}}" />
	</DataTemplate>

	<DataTemplate DataType="local:FileFontSource">
		<TextBox Text="{Binding Path=FontFilePath}" />
	</DataTemplate>

</ResourceDictionary>