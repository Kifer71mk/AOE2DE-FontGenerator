<UserControl x:Class="Sakura.Tools.Aoe2FontGenerator.CharSetSourceSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sakura.Tools.Aoe2FontGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <RadioButton Margin="3" Content="_All" IsChecked="True" Name="FullCharSetRadioButton" Checked="FullCharSetRadioButton_OnChecked" />
            <RadioButton Margin="3" Content="_Code Print Range" IsEnabled="False" />
            <RadioButton Margin="3" Content="_String" IsEnabled="False" />
            <RadioButton Margin="3" Content="_From File" IsEnabled="False" />
        </StackPanel>

	</Grid>
</UserControl>
